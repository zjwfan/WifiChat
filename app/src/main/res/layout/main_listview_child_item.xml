<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EEEEEE"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/icon_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/main_listview_child_item_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="35dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="5dip"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/main_listview_child_item_msg_num"
            android:layout_width="25dip"
            android:layout_height="20dip"
            android:layout_gravity="right"
            android:background="@drawable/num"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="10dip"
            android:visibility="invisible" />
    </FrameLayout>

    <TextView
        android:id="@+id/main_listview_child_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dip"
        android:layout_toRightOf="@id/icon_parent"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/main_listview_child_item_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/main_listview_child_item_name"
        android:layout_toRightOf="@id/icon_parent"
        android:singleLine="true"
        android:textColor="@color/gray" />

</RelativeLayout>